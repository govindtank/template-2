<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.jianyi.database.dao.users.UsersDao">
    <select id="getUserById" parameterType="java.lang.Integer" resultType="UsersModel">
        SELECT * FROM jianyi.user WHERE id = #{userId}
    </select>

    <select id="getAllUsers" resultType="UsersModel">
        SELECT * FROM jianyi.user
    </select>
</mapper>
