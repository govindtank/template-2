<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efefef"
              android:orientation="vertical">

    <com.xixi.library.android.widget.titlebar.FSTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:fsProgressDrawable="@drawable/fs_titlebar_progressbar_horizontal_progress_drawable"
        app:fsProgressVisible="visible"/>

    <com.xixi.library.android.widget.loading.FSFrameLoadingLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardBackgroundColor="#fefcfb"
                app:cardElevation="1dp">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tabIndicatorColor="@color/fs_transparent"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="#ec5151"
                    app:tabTextColor="#595959">

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:icon="@drawable/home_bar_item_home"
                        android:layout="@layout/home_tab_item"
                        android:text="首页"
                        tools:ignore="HardcodedText"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:icon="@drawable/home_bar_item_category"
                        android:layout="@layout/home_tab_item"
                        android:text="分类"
                        tools:ignore="HardcodedText"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:icon="@drawable/home_bar_item_search"
                        android:layout="@layout/home_tab_item"
                        android:text="搜索"
                        tools:ignore="HardcodedText"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:icon="@drawable/home_bar_item_cart"
                        android:layout="@layout/home_tab_item"
                        android:text="购物车"
                        tools:ignore="HardcodedText"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:icon="@drawable/home_bar_item_mine"
                        android:layout="@layout/home_tab_item"
                        android:text="我"
                        tools:ignore="HardcodedText"/>
                </android.support.design.widget.TabLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </com.xixi.library.android.widget.loading.FSFrameLoadingLayout>
</LinearLayout>