<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <com.xixi.library.android.widget.titlebar.FSTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:fsLeft0Visible="invisible"
        app:fsTitleText="模板项目" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/content_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/FSAppTheme.NoActionBar"
                app:tabIndicatorColor="@color/fs_transparent"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#FF33B5E5"
                app:tabTextColor="#FF000000">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:icon="@drawable/home_bar_item_home_selector"
                    android:layout="@layout/home_tab_item"
                    android:text="首页"
                    tools:ignore="HardcodedText" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:icon="@drawable/home_bar_item_find_selector"
                    android:layout="@layout/home_tab_item"
                    android:text="hybird"
                    tools:ignore="HardcodedText" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:icon="@drawable/home_bar_item_mine_selector"
                    android:layout="@layout/home_tab_item"
                    android:text="我的"
                    tools:ignore="HardcodedText" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:icon="@drawable/home_bar_item_setting_selector"
                    android:layout="@layout/home_tab_item"
                    android:text="设置"
                    tools:ignore="HardcodedText" />
            </android.support.design.widget.TabLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>