<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FSFrameLoadingLayout">
        <attr name="fsLoadingView" format="reference"/>
        <attr name="fsFailureView" format="reference"/>
        <attr name="fsEmptyView" format="reference"/>
        <attr name="fsCenterInParent" format="reference|boolean"/>
        <attr name="fsUseSmallStyle" format="reference|boolean"/>
        <attr name="fsScaleFactor" format="float"/>
        <attr name="fsAllBackground" format="reference|color"/>
    </declare-styleable>


    <declare-styleable name="FSTitleBar">
        <attr name="android:background"/>
        <!--title-->
        <attr name="fsTitleText" format="reference|string"/>
        <attr name="fsTitleSize" format="reference|dimension"/>
        <attr name="fsTitleTxtColor" format="reference|color"/>
        <attr name="fsTitleAppearance" format="integer"/>
        <!--left0-->
        <attr name="fsLeft0BgViewBackground" format="reference|color"/>
        <attr name="fsLeft0BgViewPadding" format="reference|dimension"/>
        <attr name="fsLeft0Visible" format="enum">
            <enum name="visible" value="0x00000000"/>
            <enum name="invisible" value="0x00000004"/>
            <enum name="gone" value="0x00000008"/>
        </attr>
        <attr name="fsLeft0Appearance" format="integer"/>
        <attr name="fsLeft0Background" format="reference|color"/>
        <attr name="fsLeft0Text" format="reference|string"/>
        <attr name="fsLeft0TextSize" format="reference|dimension"/>
        <attr name="fsLeft0TextColor" format="reference|color"/>
        <attr name="fsLeft0BgWidth" format="reference|dimension"/>
        <attr name="fsLeft0BgPaddingLeft" format="reference|dimension"/>
        <attr name="fsLeft0BgPaddingRight" format="reference|dimension"/>
        <attr name="fsLeft0BgPaddingTop" format="reference|dimension"/>
        <attr name="fsLeft0BgPaddingBottom" format="reference|dimension"/>
        <attr name="fsLeft0BgTextColor" format="reference|color"/>
        <!--left1-->
        <attr name="fsLeft1BgViewBackground" format="reference|color"/>
        <attr name="fsLeft1BgViewPadding" format="reference|dimension"/>
        <attr name="fsLeft1Visible" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="fsLeft1Appearance" format="integer"/>
        <attr name="fsLeft1Background" format="reference|color"/>
        <attr name="fsLeft1Text" format="reference|string"/>
        <attr name="fsLeft1TextSize" format="reference|dimension"/>
        <attr name="fsLeft1TextColor" format="reference|color"/>
        <attr name="fsLeft1BgWidth" format="reference|dimension"/>
        <attr name="fsLeft1BgPaddingLeft" format="reference|dimension"/>
        <attr name="fsLeft1BgPaddingRight" format="reference|dimension"/>
        <attr name="fsLeft1BgPaddingTop" format="reference|dimension"/>
        <attr name="fsLeft1BgPaddingBottom" format="reference|dimension"/>
        <attr name="fsLeft1BgTextColor" format="reference|color"/>
        <!--right0-->
        <attr name="fsRight0BgViewBackground" format="reference|color"/>
        <attr name="fsRight0BgViewPadding" format="reference|dimension"/>
        <attr name="fsRight0Visible" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="fsRight0Appearance" format="integer"/>
        <attr name="fsRight0Background" format="reference|color"/>
        <attr name="fsRight0Text" format="reference|string"/>
        <attr name="fsRight0TextSize" format="reference|dimension"/>
        <attr name="fsRight0TextColor" format="reference|color"/>
        <attr name="fsRight0BgWidth" format="reference|dimension"/>
        <attr name="fsRight0BgPaddingLeft" format="reference|dimension"/>
        <attr name="fsRight0BgPaddingRight" format="reference|dimension"/>
        <attr name="fsRight0BgPaddingTop" format="reference|dimension"/>
        <attr name="fsRight0BgPaddingBottom" format="reference|dimension"/>
        <attr name="fsRight0BgTextColor" format="reference|color"/>
        <!--right1-->
        <attr name="fsRight1BgViewBackground" format="reference|color"/>
        <attr name="fsRight1BgViewPadding" format="reference|dimension"/>
        <attr name="fsRight1Visible" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
        <attr name="fsRight1Appearance" format="integer"/>
        <attr name="fsRight1Background" format="reference|color"/>
        <attr name="fsRight1Text" format="reference|string"/>
        <attr name="fsRight1TextSize" format="reference|dimension"/>
        <attr name="fsRight1TextColor" format="reference|color"/>
        <attr name="fsRight1BgWidth" format="reference|dimension"/>
