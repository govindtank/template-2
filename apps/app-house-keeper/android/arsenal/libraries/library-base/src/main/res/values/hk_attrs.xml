        <attr name="hkRight1BgPaddingBottom" format="reference|dimension" />
        <attr name="hkRight1BgTextColor" format="reference|color" />
        <attr name="hkProgressDrawable" format="reference" />
        <attr name="hkProgressVisible" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="HKRoundImageView">
        <attr name="hkBorderWidth" format="dimension" />
        <attr name="hkBorderColor" format="color" />
        <attr name="hkProgressColor" format="color" />
        <attr name="hkProgressBorder" format="integer" />
        <attr name="hkCornerRadius" format="dimension" />
        <attr name="hkLeftTopCornerRadius" format="dimension" />
        <attr name="hkRightTopCornerRadius" format="dimension" />
        <attr name="hkLeftBottomCornerRadius" format="dimension" />
        <attr name="hkRightBottomCornerRadius" format="dimension" />
        <attr name="hkType" format="enum">
            <enum name="oval" value="2" />
            <enum name="round" value="1" />
            <enum name="circle" value="0" />
        </attr>
    </declare-styleable>

</resources>
