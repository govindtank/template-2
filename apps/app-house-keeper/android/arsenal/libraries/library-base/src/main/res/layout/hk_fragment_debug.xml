<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.smart.library.widget.titlebar.HKTitleBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/hk_titlebar_height"
                app:hkTitleText="配置环境" />

            <com.smart.library.widget.HKListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hk_pink"
                android:cacheColorHint="@color/hk_transparent"
                android:divider="@color/hk_transparent"
                android:dividerHeight="0dp"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:scrollbars="none">

                <requestFocus />
            </com.smart.library.widget.HKListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/hk_blue_light"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@null"
                    android:padding="5dp"
                    android:src="@android:drawable/ic_menu_add" />

                <EditText
                    android:id="@+id/editLabel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:hint="标签"
                    android:inputType="textUri"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:textColor="#333"
                    android:textColorHint="#909090"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:hint="服务地址"
                    android:inputType="textUri"
                    android:padding="10dp"
                    android:textColor="#333"
                    android:textColorHint="#909090"
                    android:textCursorDrawable="@null"
                    android:textSize="14dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/addCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/hk_selector"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="点击添加"
                        android:textColor="@color/hk_black"
                        android:textSize="14dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#8DDDEE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:divider="@drawable/hk_line_vertical_white"
        app:dividerPadding="10dp"
        app:showDividers="middle">

        <TextView
            android:id="@+id/hideTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hk_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="永久隐藏悬浮窗"
            android:textColor="@color/hk_black"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/clearCacheTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hk_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="程序详细信息"
            android:textColor="@color/hk_black"
            android:textSize="14dp" />
    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>